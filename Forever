<script>
const message = `Happy 8th month anniversary to us.
Our relationship hasn't been a year, but I feel like we've come a long way, we've had our share of ups and downs, well, part of it because I know there are more.

Anyway, never thought we'd make it this far, but we are still here, still going, and I know sometimes it will feel like there's no love, you know, distance, but I pray that every time that happens, we remember our love for each other.

I love you Anane Divine Favour â¤ï¸
Thank you for being you and loving me.
Forever yoursðŸ«¶ðŸ¼â¤ï¸`;

function unlock() {
    const val = document.getElementById("code").value.trim().toLowerCase();
    if (val === "8months" || val === "8 months") {

        // Fade out page 1
        document.getElementById("page1").style.opacity = 0;
        document.getElementById("hint").style.opacity = 0;

        setTimeout(() => {
            document.getElementById("page1").style.display = "none";

            // Show page 2
            const p2 = document.getElementById("page2");
            p2.style.pointerEvents = "auto";
            p2.style.opacity = 1;

            // Fade in paper
            const paperContainer = document.getElementById("paperContainer");
            paperContainer.style.opacity = 1;

            // Typewriter effect
            const paper = document.getElementById("paper");
            let i = 0;
            function typeWriter() {
                if (i < message.length) {
                    paper.innerText += message.charAt(i);
                    i++;
                    setTimeout(typeWriter, 35); // typing speed
                }
            }
            setTimeout(typeWriter, 500); // start typing after short delay

        }, 1500);

    } else {
        alert("Incorrect code, princess. Try again.");
    }
}
</script>

